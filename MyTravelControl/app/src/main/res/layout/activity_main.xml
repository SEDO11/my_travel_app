<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<!-- 첫번 째 나눔 구역 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인스타"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/black"/>

            <ImageButton
                android:id="@+id/instaBtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/insta_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카톡"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/black"/>

            <ImageButton
                android:id="@+id/katalkBtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/katalk" />
        </LinearLayout>

    </LinearLayout>

    <!-- 두번 째 나눔 구역 -->
    <SlidingDrawer
        android:id="@+id/slidingDrawer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:content="@+id/content"
        android:handle="@+id/handle"
        android:layout_weight="1">

        <Button
            android:id="@+id/handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서랍 열기" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#009900"
            android:gravity="center">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!-- 세번 째 나눔 구역 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="130dp"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="네이버지도"
                                android:textSize="20dp"
                                android:layout_gravity="center"
                                android:textAlignment="center"/>

                            <ImageButton
                                android:id="@+id/naverMapBtn"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:background="@drawable/naver_map" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="130dp"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="카카오맵"
                                android:textSize="20dp"
                                android:layout_gravity="center"
                                android:textAlignment="center"/>

                            <ImageButton
                                android:id="@+id/kakaoMapBtn"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:background="@drawable/kakao_map" />
                        </LinearLayout>

                    </LinearLayout>

                    <!-- 네번 째 나눔 구역 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="교통"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:textSize="20dp"/>

                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="10dp">

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="130dp"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="시내버스"
                                    android:textSize="20dp"
                                    android:layout_gravity="center"
                                    android:textAlignment="center"/>

                                <ImageButton
                                    android:id="@+id/transBtn"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/trans_icon" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="130dp"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="카카오맵"
                                    android:textSize="20dp"
                                    android:layout_gravity="center"
                                    android:textAlignment="center"/>

                                <ImageButton
                                    android:id="@+id/kakaoMapBtn4"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/kakao_map" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="130dp"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="카카오맵"
                                    android:textSize="20dp"
                                    android:layout_gravity="center"
                                    android:textAlignment="center"/>

                                <ImageButton
                                    android:id="@+id/kakaoMapBtn5"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/kakao_map" />
                            </LinearLayout>

                        </LinearLayout>
                    </HorizontalScrollView>


                </LinearLayout>


            </ScrollView>

        </LinearLayout>
    </SlidingDrawer>
    <!-- 두번째 -->

</LinearLayout>